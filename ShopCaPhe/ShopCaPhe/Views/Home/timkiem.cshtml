                    <div id="anhbia"><img src="~/Images/@item.HinhMinhHoa" /></div>
                    <div id="tensach">@item.TenSP</div>
                    <div id="tieude">
                        @item.LOAISP.TenLoai
                    </div>
                    <div class="price">
                        <span id="agia">@item.DonGia đ</span>

                    </div>
