                            <li class="tooltip-li li2"><a id="myBtn" onclick="Poppup(@item.MaSP)"><i class="fa fa-exchange"></i></a></li>
                            <li class="tooltip-li li3"><a href="~/ViewSP/ChiTietSanPham?MaSP=@item.MaSP"><i class="fa fa-eye" style="color:black"></i></a></li>
                        </ul>

                    </div>
                </div>
                <div id="myModal" class="modal">
                    <!-- Modal content -->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2>THÔNG TIN SẢN PHẨM</h2>
                            <span class="close">&times;</span>

                        </div>
                        <div class="modal-body">
                            <p>@item.MaSP</p>
                            <p>zzzzz</p>
                            <p>zzzzz</p>
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>

            }
        </div>
    </form>
}
else
{

    <h3 style="text-align:center">Không tìm thấy sản phẩm vào phù hợp với từ khóa @Session["nametimkiem"] !</h3>
    <img width="50%" src="~/Images/Fail.jpg" style="margin-left:25%; display:inline-block" />
    <a href="~/Home/Index" style="display:block">Quay về trang sản phẩm</a>


}


