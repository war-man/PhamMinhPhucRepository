            <input type="text" id="searchcontent" placeholder="Search.." name="name">
            <button id="btntimkiem" type="submit"><i class="fa fa-search"></i></button>
        </form>
    </div>


    <hr>
    <form action="" method="post">
        <div class="book-content">
            @*@{ int i = 0;}*@
            @foreach (var item in Model)
