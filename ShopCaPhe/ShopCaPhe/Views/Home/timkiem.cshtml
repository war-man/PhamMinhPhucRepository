@using ShopCaPhe.Models
@model List<SANPHAM>
@{
    ViewBag.Title = "timkiem";
    Layout = "~/Views/Shared/_LayoutCaPhe.cshtml";
}
<link href="~/Content/Index.css" rel="stylesheet" />
<div class="title">
